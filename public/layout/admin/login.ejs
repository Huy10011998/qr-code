<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Cholimex Food</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="icon"
      href="<%= host %>/static/images/favicon.ico"
      type="image/x-icon"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="<%= host %>/vendor/bootstrap/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="<%= host %>/static/css/util.css"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="<%= host %>/static/css/login.css"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="<%= host %>/static/fonts/font-awesome-4.7.0/css/font-awesome.min.css"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="<%= host %>/vendor/animate/animate.css"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="<%= host %>/vendor/css-hamburgers/hamburgers.min.css"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="<%= host %>/vendor/select2/select2.min.css"
    />
    <script
      type="text/javascript"
      src="https://cdn.jsdelivr.net/npm/toastify-js"
    ></script>
    <script src="<%= host %>/vendor/jquery/jquery-3.2.1.min.js"></script>
  </head>
  <body>
    <div class="limiter">
      <div class="container-login100">
        <div class="wrap-login100">
          <div class="login100-pic js-tilt" data-tilt>
            <a target="_blank" href="https://cholimexfood.com.vn/">
              <img src="<%= host %>/static/images/logo.png" alt="img-login" />
            </a>
          </div>
          <div class="login100-form validate-form">
            <span class="login100-form-title"> Đăng Nhập </span>
            <div
              class="wrap-input100 validate-input"
              data-validate="Vui lòng điền tài khoản!"
            >
              <input
                id="userId"
                class="input100"
                type="text"
                name="userId"
                placeholder="Mã nhân viên"
              />
              <span class="focus-input100"></span>
              <span class="symbol-input100">
                <i class="fa fa-user-secret" aria-hidden="true"></i>
              </span>
            </div>
            <div
              class="wrap-input100 validate-input"
              data-validate="Vui lòng điền mật khẩu!"
            >
              <input
                id="password"
                class="input100"
                type="password"
                name="password"
                placeholder="Mật khẩu"
              />
              <span class="focus-input100"></span>
              <span class="symbol-input100">
                <i class="fa fa-lock" aria-hidden="true"></i>
              </span>
            </div>
            <div class="container-login100-form-btn">
              <button id="btn-login" class="login100-form-btn" disabled>
                Đăng nhập
              </button>
            </div>
            <div class="text-center p-t-12">
              <!-- <span class="txt1"> Forgot </span> -->
              <!-- <a class="txt2" href="#"> Username / Password? </a> -->
            </div>
            <div class="text-center p-t-136">
              <a class="txt2" href="#">
                <!-- Create your Account -->
                <!-- <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i> -->
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="<%= host %>/vendor/bootstrap/js/popper.js"></script>
    <script src="<%= host %>/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="<%= host %>/vendor/select2/select2.min.js"></script>
    <script src="<%= host %>/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
      $(".js-tilt").tilt({
        scale: 1.1,
      });
    </script>

    <script>
      const host = "<%= host %>";
    </script>

    <script src="<%= host %>/static/js/login.js"></script>
  </body>
</html>
